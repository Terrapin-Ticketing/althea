{
  "parser"  : "babel-eslint",
  "extends" : [
    "eslint:recommended", 
    "plugin:react/recommended"
  ],
  "plugins" : [
    "babel",
    "react",
    "promise"
  ],
  "env" : {
    "browser" : true,
    "jest" : true
  },
  "globals" : {
    "__DEV__"      : false,
    "__TEST__"     : false,
    "__PROD__"     : false,
    "__COVERAGE__" : false
  },
  "rules" : {
    "key-spacing"                 : "off",
    "jsx-quotes"                  : [2, "prefer-single"],
    "object-curly-spacing"        : [2, "always"],
    "comma-dangle"                : "off",
    "space-before-function-paren" : ["error", "never"],
    "no-console"                  : "warn"
  }
}
